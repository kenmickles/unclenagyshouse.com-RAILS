# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'
gem 'slim'
gem 'bourbon'
gem 'json'
gem 'jquery-rails'
gem 'rdiscount'

# asset building
gem 'sass-rails',   '~> 4.0.0'
